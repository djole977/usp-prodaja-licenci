@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager;
@{
    var user = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProdajaLicenci</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProdajaLicenci.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/daterangepicker/daterangepicker.css"/>
    <link rel="stylesheet" href="~/lib/datatables/datatables.css"/>
    <link rel="stylesheet" href="~/lib/jquery-confirm/jquery-confirm.min.css"/>
    <link rel="stylesheet" href="~/lib/sidebar/dist/css/adminlte.min.css"/>
</head>
<body class="hold-transition sidebar-mini layout-fixed sidebar-collapse">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <div class="lds-spinner"></div>
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item mr-4">
                        <a data-widget="pushmenu" href="#" role="button"><h3 style="color: #36a847">My Balance: $@user?.Balance</h3></a>
                    </li>
                }
                <li class="nav-item ml-4">
                    <h4>@user?.Email</h4>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" id="fullscreen" href="#" role="button">
                        <i id="fullscreen1" class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary">
            <!-- Brand Logo -->
            <a href="../Home/Dashboard" class="brand-link">
                <img src="~/resources/singi_logo.png" class="brand-image img-rect" style="opacity: .8">
                <span class="brand-text font-weight-light">Đorđe Đ. S.</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <h3 style="color: #d4d4d4">License Sales</h3>
                    </div>
                    
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul id="nav-sidebar" class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                                <a id="nav-link-14" asp-controller="Home" asp-action="Licenses" class="nav-link" onclick="addActive(this)">
                                    <i class="nav-icon fas fa-store"></i>
                                    <p>
                                        Store
                                    </p>
                                </a>
                            </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a id="nav-link-14" href="/Identity/Account/Login" class="nav-link" onclick="addActive(this)">
                                    <i class="nav-icon fas fa-user"></i>
                                    <p>
                                        Login
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a id="nav-link-14" href="/Identity/Account/Register" class="nav-link" onclick="addActive(this)">
                                    <i class="nav-icon fas fa-address-card"></i>
                                    <p>
                                        Register
                                    </p>
                                </a>
                            </li>
                        }
                        else
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a id="nav-link-14" asp-controller="Admin" asp-action="ManageAccounts" class="nav-link" onclick="addActive(this)">
                                        <i class="nav-icon fas fa-users"></i>
                                        <p>
                                            Manage Users
                                        </p>
                                    </a>
                                </li>
                            }
                            if(User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Marketing"))
                            {
                                <li class="nav-item">
                                    <a id="nav-link-14" asp-controller="SalesAndMarketing" asp-action="Index" class="nav-link" onclick="addActive(this)">
                                        <i class="nav-icon fas fa-gear"></i>
                                        <p>
                                            Manage Licenses
                                        </p>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a id="nav-link-14" asp-controller="User" asp-action="MyLicenses" class="nav-link" onclick="addActive(this)">
                                    <i class="nav-icon fas fa-key"></i>
                                    <p>
                                        My Licenses
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item"><hr style="background-color: grey" /></li>
                            <li class="nav-item">
                                <a id="nav-link-9" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="nav-link" onclick="addActive(this)">
                                    <i class="nav-icon far fa-circle text-danger"></i>
                                    <p>Log Out</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        </div>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @await RenderSectionAsync("Header", required: false)
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid p-4">

                    <!-- Main Content HERE -->
                    @RenderBody()

                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ProdajaLicenci - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <script src="~/lib/blockui/blockUI.js"></script>
    <script src="~/lib/sidebar/dist/js/adminlte.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="https://kit.fontawesome.com/9c82e85201.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
