@model ProdajaLicenci.ViewModels.ManageAccountsVM
<div class="col-12">
    <div class="col-12 d-flex justify-content-start">
        <h2>Manage Users</h2>
    </div>
    <hr />
    <div class="col-12">
        <div class="row d-flex">
            <div class="col-5">
                <div class="row d-flex justify-content-between mb-2">
                    <h4 class="col-6">Roles</h4>
                    <button class="btn btn-primary col-2" onclick="AddRoleModal()">+ Add</button>
                </div>
                <table id="rolesTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <td>
                                Name
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var role in Model.Roles)
                        {
                            <tr>
                                <td>
                                    @role
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-2"></div>
            <div class="col-5">
                <div class="row d-flex justify-content-between mb-2">
                    <h4 class="col-6">Users</h4>
                    <button class="btn btn-primary col-2" onclick="AddUserModal()">+ Add</button>
                </div>
                <table id="usersTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <td>
                                Email
                            </td>
                            <td>
                                Role
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    @user.Email
                                </td>
                                <td>
                                    @user.Role
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addRoleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">Add Role</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-6">
                <h4>Name:</h4>
                <input id="newRoleName" type="text" class="form-control" placeholder="HR/Marketing etc..." />
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="AddNewRole()">Add</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">Add User</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-8">
                <div class="col-12">
                    <h4>Email:</h4>
                    <input id="newUserEmail" type="text" class="form-control" placeholder="john@gmail.com" />
                </div>
                <div class="col-12 mt-4">
                    <h4>Password:</h4>
                    <input id="newUserPassword" type="password" class="form-control" placeholder="****" />
                </div>
                <div class="col-12 mt-4">
                    <h4>Full Name:</h4>
                    <input id="newUserFullName" type="text" class="form-control" placeholder="Pera Peric" />
                </div>
                <div class="col-12 mt-4">
                    <h4>Role:</h4>
                    <select id="newUserRole" class="form-control">
                        @foreach(var role in Model.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="AddNewUser()">Add</button>
      </div>
    </div>
  </div>
</div>

<input id="createRoleUrl" type="hidden" value="@Url.Action("CreateRole", "Admin")" />
<input id="createUserUrl" type="hidden" value="@Url.Action("CreateUser", "Admin")" />

@section Scripts{
    <script src="~/js/ManageAccounts.js"></script>
}