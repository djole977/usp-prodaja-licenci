@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager;
@{
    var user = await UserManager.GetUserAsync(User);
}
@model ProdajaLicenci.ViewModels.LicensesVM
<div class="col-12">
    <div class="col-12 d-flex justify-content-start">
        <h2>My Licenses</h2>
    </div>
    <hr />
    <div class="col-12">
        <table id="licensesTable" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <td>
                        Vendor
                    </td>
                    <td>
                        Valid From
                    </td>
                    <td>
                        Valid Until
                    </td>
                    <td>
                        Actions
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach(var license in Model.Licenses)
                {
                    <tr>
                        <td>
                            @license.Vendor.Name
                        </td>
                        <td>
                            @license.ValidFrom.ToString()
                        </td>
                        <td>
                            @license.ValidTo.ToString()
                        </td>
                        <td>
                            <i onclick="GetLicenseKey(@license.Id)" class="fas fa-eye" style="cursor: pointer"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="licenseInfoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">About License</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="col-12 d-flex justify-content-center">
            <div class="col-12">
                <div class="col-12">
                    <h5>Key:</h5>
                    <input id="licenseValue" type="text" class="form-control" disabled />
                </div>
                <div class="col-12 mt-4">
                    <h5>Information:</h5>
                    <p id="licenseDesc"></p>
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<input id="getLicenseKeyUrl" type="hidden" value="@Url.Action("GetLicenseKey", "User")" />

@section Scripts{
    <script src="~/js/MyLicenses.js"></script>
}